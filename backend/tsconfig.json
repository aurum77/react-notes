{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build",
    "allowJs": false
  }
}
